<header class="header bg-white border-bottom box-shadow mb-3">
    <nav class="navbar navbar-expand navbar-light">
        <div class="container-fluid">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link text-muted" href="/">Databases</a></li>
                @NavItems
            </ul>
            <div class="d-flex align-self-start">
                @ActionItems
            </div>
        </div>
    </nav>
</header>

<main class="main">
    @ChildContent
</main>

@code {
    [Parameter]
    public RenderFragment NavItems { get; set; }

    [Parameter]
    public RenderFragment ActionItems { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
